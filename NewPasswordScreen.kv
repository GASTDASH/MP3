<NewPasswordScreen>:
    MDLabel:
        text: 'New Password'
        font_style: 'H4'
        size_hint: 1, None
        pos_hint: {"top": .88}
        padding: 20
    MDLabel:
        text: 'Enter new password'
        font_style: 'Subtitle2'
        theme_text_color: "Custom"
        text_color: app.colors["Gray2"]
        size_hint: 1, None
        pos_hint: {'top': .82}
        padding: 20
    MDTextField:
        id: password_input
        hint_text: 'Password'
        size_hint: .9, None
        height: dp(53)
        pos_hint: {'center_x': .5,'y': .56}
        error_color: (255, 0, 0)
        mode: 'rectangle'
    MDTextField:
        id: password_confirm_input
        hint_text: 'Confirm Password'
        size_hint: .9, None
        height: dp(53)
        pos_hint: {'center_x': .5,'y': .45}
        error_color: (255, 0, 0)
        mode: 'rectangle'
    MDRaisedButton:
        text: 'Log in'
        md_bg_color: app.colors["Primary"]
        size_hint: .7, .08
        pos_hint: {'center_x': .5, 'y': .3}

        on_release: root.change_btn_click(*args)
