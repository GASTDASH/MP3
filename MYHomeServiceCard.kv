<MYHomeServiceCard>
    style: 'elevated'
    md_bg_color: '#f2f2f2'
    ripple_behavior: True
    elevation: 1
    shadow_softness: 3
    shadow_offset: 0, -3

    MDRelativeLayout:
        MDIcon:
            icon: root.icon
            theme_text_color: "Custom"
            text_color: app.colors["Primary"]
            size_hint: None, None
            font_size: dp(72) 
            pos_hint: {"top": .9, "x": .04}

        MDBoxLayout:
            orientation: 'vertical'
            size_hint: 1, .5
            pos_hint: {'top': .5}
            MDLabel:
                id: title
                text: root.text_title
                theme_text_color: "Custom"
                text_color: app.colors["Primary"]
                font_style: 'Body1'
                # pos_hint: {"center_y": .66, "x": .17}
            MDLabel:
                id: subtitle
                text: root.text_subtitle
                theme_text_color: "Custom"
                text_color: app.colors["Gray2"]
                font_style: 'Caption'
                # pos_hint: {"center_y": .33, "x": .17}