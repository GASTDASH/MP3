<MYSearchTextField>:
    style: "filled"
    size_hint: .9, None
    size: 0, dp(40)
    md_bg_color: app.colors["Gray1"]

    MDRelativeLayout:
        MDIcon:
            icon: 'magnify'
            pos_hint: {"right": .96, 'center_y': .5}
            size_hint: None, None
            size: dp(10), dp(10)
            theme_text_color: "Custom"
            text_color: app.colors["Gray2"]
        MDTextField:
            size_hint: .95, None
            pos_hint: {"center_y": .5, "center_x": .5}
            mode: "line"
            hint_text: root.hint_text
            line_color_normal: app.colors["Gray1"]
            line_color_focus: app.colors["Gray1"]