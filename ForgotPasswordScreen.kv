<ForgotPasswordScreen>:
    MDLabel:
        text: 'Forgot Password'
        font_style: 'H4'
        size_hint: 1, None
        pos_hint: {"top": .88}
        padding: 20
    MDLabel:
        text: 'Enter your email address'
        font_style: 'Subtitle2'
        theme_text_color: "Custom"
        text_color: app.colors["Gray2"]
        size_hint: 1, None
        pos_hint: {'top': .82}
        padding: 20
    MDTextField:
        id: email_input
        hint_text: 'Email Address'
        size_hint: .9, None
        height: dp(53)
        pos_hint: {'center_x': .5,'y': .56}
        error_color: (255, 0, 0)
        mode: 'rectangle'
    MDRaisedButton:
        text: 'Send OPT'
        md_bg_color: app.colors["Primary"]
        size_hint: .7, .08
        pos_hint: {'center_x': .5, 'y': .3}

        on_release: root.send_btn_click(*args)
    MDLabel:
        markup: True
        text: f'[color={app.colors["Gray2"]}]Remember password? Back to [color={app.colors["Primary"]}]Sign in[/color]'
        font_style: 'Subtitle1'
        halign: 'center'
        size_hint: 1, .04
        pos_hint: {'top': .2}
        
        on_touch_down: root.back(*args)
